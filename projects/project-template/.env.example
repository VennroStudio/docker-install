# Название проекта
PROJECT_NAME=project1

# Основной домен
PROJECT_DOMAIN=project1.local

# Дополнительные домены
PROJECT_DOMAINS_EXTRA=www.project1.local,api.project1.local

# Веб-сервер
WEB_SERVER=apache

# Версии
PHP_VERSION=8.1

# Временная зона
TIMEZONE=Europe/Moscow

# Использование общих сервисов
USE_SHARED_SERVICES=true

# MariaDB
SHARED_DB_HOST=infrastructure-mariadb
SHARED_DB_ROOT_PASSWORD=shared_root_password

DB_NAME=project1_db
DB_USER=project1_user
DB_PASSWORD=project1_password

# Redis
SHARED_REDIS_HOST=infrastructure-redis
SHARED_REDIS_PORT=6379

# MailHog
SHARED_MAILHOG_HOST=infrastructure-mailhog
SHARED_MAILHOG_PORT=1025
