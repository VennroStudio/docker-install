# ===============================================
# НАСТРОЙКИ ПРОЕКТА
# ===============================================

# Название проекта (уникальное!)
PROJECT_NAME=project1

# Основной домен
PROJECT_DOMAIN=project1.local

# Дополнительные домены
PROJECT_DOMAINS_EXTRA=www.project1.local,api.project1.local

# Веб-сервер
WEB_SERVER=apache

# Версии
PHP_VERSION=8.1
NODE_VERSION=18

# Временная зона
TIMEZONE=Europe/Moscow

# Использование общих сервисов
USE_SHARED_DB=true
USE_SHARED_REDIS=true
USE_SHARED_MAILHOG=true

# Настройки подключения к общей БД (если USE_SHARED_DB=true)
SHARED_DB_HOST=infrastructure-mariadb
SHARED_DB_ROOT_PASSWORD=shared_root_password_2024

# Создание собственной БД в общей MariaDB
DB_NAME=project1_db
DB_USER=project1_user
DB_PASSWORD=project1_password_2024

# Настройки подключения к общему Redis (если USE_SHARED_REDIS=true)
SHARED_REDIS_HOST=infrastructure-redis
SHARED_REDIS_PORT=6379

# Настройки MailHog (если USE_SHARED_MAILHOG=true)
SHARED_MAILHOG_HOST=infrastructure-mailhog
SHARED_MAILHOG_PORT=1025
